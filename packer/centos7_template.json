{
    "builders": [
        {
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7-x86_64/ks.cfg<enter><wait>"
            ],
            "disk_size": 50000,
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "guest_os_type": "RedHat_64",
            "hard_drive_interface": "sata",
            "headless": false,
            "http_directory": "http",
            "iso_checksum": "9ed9ffb5d89ab8cca834afce354daa70a21dcb410f58287d6316259ff89758f5",
            "iso_checksum_type": "sha256",
            "iso_url": "http://binaries.mms-at-work.de/isos/CentOS-7/CentOS-7-x86_64-NetInstall-1511.iso",
            "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_username": "vagrant",
            "ssh_wait_timeout": "1200s",
            "type": "virtualbox-iso",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "1024"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "1"
                ]
            ],
            "virtualbox_version_file": ".vbox_version"
        }
    ],
    "description": "CentOS 7 packer template for De-Mail",
    "post-processors": [
        {
            "compression_level": 1,
            "output": "build/centos7-x86_64_{{.Provider}}-{{user `version`}}.box",
            "type": "vagrant"
        }
    ],
    "provisioners": [
        {
            "environment_vars": [
                "PACKER_OSVERSION={{user `os_version`}}"
            ],
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "script": "scripts/update_os.sh",
            "type": "shell"
        },
        {
            "environment_vars": [
                "PACKER_OSVERSION={{user `os_version`}}"
            ],
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "pause_before": "20s",
            "scripts": [
                "scripts/vagrant.sh",
                "scripts/vboxguest.sh",
                "scripts/remove_devpackages.sh",
                "scripts/clean_netif.sh",
                "scripts/clear_rpm.sh",
                "scripts/compact.sh"
            ],
            "type": "shell"
        }
    ],
    "variables": {
        "os_version": "CentOS7",
        "version": "0.1.0"
    }
}
